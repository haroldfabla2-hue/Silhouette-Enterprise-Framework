# ==============================================================================
# SILHOUETTE ENTERPRISE FRAMEWORK V4.0 - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and configure the values according to your environment
# DO NOT commit the actual .env file to version control

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
POSTGRES_DB=silhouette_db
POSTGRES_USER=silhouette
POSTGRES_PASSWORD=silhouette2024
DB_HOST=localhost
DB_PORT=5432
DB_SSL=false

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=silhouette2024
REDIS_DB=0

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
NODE_ENV=production
API_PORT=3000
WEB_PORT=8080
LOG_LEVEL=info

# ==============================================================================
# FRAMEWORK SPECIFIC
# ==============================================================================
FRAMEWORK_MODE=auto
SCALING_INTERVAL=30
JWT_SECRET=silhouette-jwt-secret-key-2025
API_RATE_LIMIT=1000

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================
GRAFANA_PASSWORD=admin
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=7

# ==============================================================================
# SECURITY
# ==============================================================================
# Change these in production!
JWT_EXPIRY=24h
SESSION_SECRET=silhouette-session-secret-2025
API_KEY_PREFIX=sk_

# ==============================================================================
# EXTERNAL INTEGRATIONS
# ==============================================================================
# Add your external service keys here
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@silhouette.local

# ==============================================================================
# CLOUD PROVIDERS (Optional)
# ==============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=

GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ==============================================================================
# DEVELOPMENT/TESTING
# ==============================================================================
# Set to true to enable debug mode
DEBUG=false
TEST_MODE=false

# ==============================================================================
# PERFORMANCE TUNING
# ==============================================================================
# Database connection pool size
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis connection settings
REDIS_POOL_SIZE=10
REDIS_RETRY_DELAY=1000

# Framework scaling thresholds
TOKEN_USAGE_THRESHOLD=80
ERROR_RATE_THRESHOLD=5
RESPONSE_TIME_THRESHOLD=5000

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================
BACKUP_STORAGE_PATH=./backups
BACKUP_COMPRESSION=gzip
BACKUP_ENCRYPTION=false
BACKUP_ENCRYPTION_KEY=

# ==============================================================================
# NOTIFICATION SETTINGS
# ==============================================================================
# Enable/disable various notification channels
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_DISCORD_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=true

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_RETENTION_DAYS=30

# ==============================================================================
# SSL/TLS CONFIGURATION
# ==============================================================================
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
FORCE_HTTPS=false

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ==============================================================================
# FRAMEWORK TIERS CONFIGURATION
# ==============================================================================
# Override default tier limits if needed
FREE_TIER_MAX_TOKENS=10000
PYME_TIER_MAX_TOKENS=100000
MEDIANA_TIER_MAX_TOKENS=500000
ENTERPRISE_TIER_MAX_TOKENS=2000000

# ==============================================================================
# HEALTH CHECK CONFIGURATION
# ==============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# ==============================================================================
# CACHING CONFIGURATION
# ==============================================================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=300

# ==============================================================================
# METRICS CONFIGURATION
# ==============================================================================
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics
METRICS_RETENTION_HOURS=168
METRICS_BATCH_SIZE=1000

# ==============================================================================
# ALERTING CONFIGURATION
# ==============================================================================
ALERT_EMAIL_RECIPIENTS=admin@silhouette.local
ALERT_SLACK_CHANNEL=#alerts
ALERT_MIN_SEVERITY=warning

# ==============================================================================
# DEVELOPMENT OVERRIDES
# ==============================================================================
# These are automatically set based on NODE_ENV
# NODE_ENV=development: Enable debug logging, disable SSL, use test data
# NODE_ENV=production: Enable all security features, use production data
# NODE_ENV=test: Use in-memory databases, disable external calls
